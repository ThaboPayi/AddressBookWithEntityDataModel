@model AddressBookWithEntityDataModel.Models.ViewModels.ContactDetails
@{
    var _ContactPosition = 0;
}
@using (Html.BeginForm())
{
    <table id="myTable " class="table table-striped table-bordered" cellspacing="0" style="width:100%; color:#004187; padding-top:0px">
        <thead>
            <tr>
                <td style="width:4%"></td>
                <td style="width:10%">NO</td>
                <td style="width: 25%">NAME</td>
                <td style="width: 25%">SURNAME</td>
                <td style="width: 4.5%">EMAIL</td>
                <td style="width:4%"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ContactItems)
            {
                <tr>
                    <td style="text-wrap:normal">
                        <button id="editcontactmodal" class="btn btn-default" style="width:100%;  color:#ffffff; background-color:#004187; border:none" onclick="CallEditModalView('@item.Id');return false;">EDIT</button>
                    </td>
                    <td style="text-wrap:normal !important">
                        @Html.HiddenFor(m => m.ContactID)
                        <div style="width:15px">
                            @(++_ContactPosition)
                        </div>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ContactName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactSurname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactEmail)
                    </td>
                    <td style="text-wrap:normal">
                        <button id="deletecontact" class="btn btn-default" style="width:100%;  color:#ffffff; background-color:#004187; border:none" onclick="DeleteContactDetails('@item.Id');return false;">DELETE</button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td style="border:none" colspan="10"></td>
            </tr>
        </tfoot>
    </table>
}



